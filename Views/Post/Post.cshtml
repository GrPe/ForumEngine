@model PostViewModel

    <div class="jumbotron">
        <h1 class="display-4">@Model.Title</h1>
        <a asp-action="Edit" asp-route-id="@Model.Id" style="width:100px" class="btn btn-primary">Edit</a>
        <a asp-action="Remove" asp-route-id="@Model.Id" style="width:100px" class="btn btn-danger">Remove</a>
        <hr />
        <div class="lead">
            @foreach (var c in Model.Content)
            {
                <p>@c</p>
            }
        </div>
        <hr class="my-4">
        @foreach (var comment in Model.Comments)
        {
            <hr />
            <div class="media">
                <img src="~/img/post.png" class="mr-3" width="64" height="64" />
                <div class="media-body">
                    @foreach (var c in comment.Content)
                    {
                        <p>@c</p>
                    }
                </div>
            </div>
            <br />
        }
    </div>